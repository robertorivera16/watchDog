<?xml version='1.0' encoding='utf-8'?>
<widget id="io.uprm.watchdog" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Watch Dog</name>
    <description>
        An emergency notification system for the University of Puerto Rico at Mayag√ºez
    </description>
    <author email="roberto.rivera16@upr.edu">
        Roberto C. Rivera Reyes
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="onesignal-cordova-plugin" spec="2.0.11" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="onesignal-cordova-plugin" spec="~2.0.11" />
</widget>
